<div class="col-sm-2 col-md-3">
  <%= image_tag product.image_url, class: "img-responsive" unless product.image_url.blank? %>
  <h4><%= product.name %> </h4>
  <p><%= product.description %></p>
  <p><%= product.colour %></p>
  <p><%= @price_unit %><%= product.price %></p>
  <p><%= link_to ' Show ', product %><%= link_to ' Edit ', edit_product_path(product) %><%= link_to ' Destroy ', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
</div><!-- /col -->