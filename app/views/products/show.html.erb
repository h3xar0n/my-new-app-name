<div class="container-fluid show-product">
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <%= image_tag(@product.image_url, class: "thumbnail img-responsive") %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>
    </div>
    <div class="col-xs-12 col-md-6 text-area thumbnail">
      <p><strong><%= @product.name %></strong></p>
      <p><%= @product.description %></p>
      <p>Available colour: <%= @product.colour %></p>
      <p>â‚¬<%= @product.price %></p>
      <h5>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></h5>
    </div>
  </div> <!-- row -->
  <div class="row review">
    <div class="col-xs-12 col-md-6 thumbnail">
      <%= render 'new_comment' %>
    </div> <!-- col new_comment -->
    <% unless !@product.comments.empty? %>
    <div class="col-xs-12 col-md-6">
      <div class="col-md-4 col-xs-12 container-rating">
        <div class="rated" data-score="<%= @product.highest_rating_comment.rating %>"></div>
          <h5>Best rating:</h5>
          <p>"<%= @product.highest_rating_comment.body%>"</p>
        </div> 
      </div> <!-- col best -->
      <div class="col-md-4 col-xs-12 container-rating">
        <div class="rated" data-score="<%= @product.lowest_rating_comment.rating %>"></div>
          <h5>Worst rating:</h5>
          <p>"<%= @product.lowest_rating_comment.body%>"</p>
        </div><!-- col  worst-->
      </div> <!-- col -->
    </div> <!-- row review -->
    <div class="col-md-12 col-xs-12">
     <%= render 'comments' %>
    </div><!-- col -->
    <% end %>
</div> <!-- container show product-->
