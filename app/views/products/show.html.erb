<div class="container-fluid show-product">
  <div class="row" data-product-id="<%= @product.id %>">
    <div class="col-xs-12 col-md-6">
      <%= image_tag(@product.image_url, class: "thumbnail img-responsive img-zoom", data_zoom_image: "@product.image_url_large") %>
      <% if signed_in? && current_user.admin? %>
        <%= link_to 'Edit', edit_product_path(@product) %> |
        <% end %> 
      <%= link_to 'Back', products_path %>
    </div>
    <div class="col-xs-12 col-md-6 text-area thumbnail">
      <p><strong><%= @product.name %></strong></p>
      <p><%= @product.description %></p>
      <p>Available colour: <%= @product.colour %></p>
      <p>â‚¬<%= @product.price %></p>
      <%= form_tag "/payments/create" do %>
        <%= render partial: "shared/stripe_checkout_button" %>
        <%= hidden_field_tag(:product_id, @product.id) %>
      <% end %>
      <h5>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div></h5>
    </div>
  </div>
  <div class="row review">
    <div class="col-xs-12 col-md-6 thumbnail">
      <%= render 'new_comment' %>
    </div>
    <div class="col-xs-12 col-md-6">
      <% if @comments.present? %>
          <div class="col-md-4 col-xs-12">
            <div class="container-rating">
              <div class="rated" data-score="<%= @product.highest_rating_comment.rating %>"></div>
                <h4>Best rating:</h4>
                <p>"<%= @product.highest_rating_comment.body %>"</p>
            </div>
          </div><!-- col best -->
          <div class="col-md-4 col-xs-12">
            <div class="container-rating">
              <div class="rated" data-score="<%= @product.lowest_rating_comment.rating %>"></div>
                <h4>Worst rating:</h4>
                <p>"<%= @product.lowest_rating_comment.body %>"</p>
              </div>
          </div><!-- col  worst-->
        <% end %>
    </div> <!-- col -->
    <div class="col-md-12 col-xs-12">
      <%= render 'comments' %>
    </div><!-- col -->
  </div>
</div>